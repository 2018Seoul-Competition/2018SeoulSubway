<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.robert.newtpo2.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="write Line Number"
        android:id="@+id/editLineNum"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="호선별 역 검색"
        android:id="@+id/btnLineNum"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="역 이름을 적어주세요"
        android:id="@+id/editStationName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="역 호선을 적어주세요"
        android:id="@+id/editStationLine"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="실시간 역정보 검색"
        android:id="@+id/btnStationName"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시간표 역정보 검색"
        android:id="@+id/btnStationInfo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="result"
        android:id="@+id/result"/>
</LinearLayout>
